<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.tvj.studenthome" >

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".Login"
            android:label="@string/title_activity_login" >
            <intent-filter>
                <action android:name="android.intent.action.Login" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainMenu"
            android:label="@string/title_activity_main_menu" >
        </activity>
        <activity
            android:name=".AvondetenActivity"
            android:label="@string/title_activity_avondeten" >
        </activity>
        <activity
            android:name=".AvondetenView"
            android:label="@string/title_activity_avondeten_view" >
        </activity>
        <activity
            android:name=".AvondetenNieuw"
            android:label="@string/title_activity_avondeten_nieuw" >
        </activity>
        <activity
            android:name=".Ranking"
            android:label="@string/title_activity_ranking" >
        </activity>
        <activity
            android:name=".AvondetenCookOff"
            android:label="@string/title_activity_avondeten_cook_off" >
        </activity>
        <activity
            android:name=".MainMenuSlider"
            android:label="@string/title_activity_main_menu_slider" >
        </activity>
    </application>

</manifest>
